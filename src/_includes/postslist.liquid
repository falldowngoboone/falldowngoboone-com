{% unless postslistCounter %}
  {% assign postslistCounter = postslist | size %}
{% endunless %}

<ol class="postlist" reversed style="counter-reset: start-from {{ postslistCounter | plus: 1 }};">
  {% for post in postslist reversed %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <span>
        <a href="{{ post.url | url }}" class="postlist-link">
          {{ post.data.title | default: post.url }}</a>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>
        {% for tag in post.data.tags %}
          {%- if collections.tagList contains tag -%}
            {% capture tagUrl %}/tags/{{ tag }}/
            {% endcapture %}
            <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </span>
    </li>
  {% endfor %}
</ol>
